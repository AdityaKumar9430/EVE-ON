<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:layout_marginHorizontal="26dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    >
<RelativeLayout
    android:id="@+id/touchId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageEvent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:outlineAmbientShadowColor="@color/onPrimaryLight"
        android:outlineSpotShadowColor="@color/onPrimaryLight"
        android:src="@drawable/signupname"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/EventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="20dp"
        android:text="Event Name" />

    <TextView
        android:id="@+id/EventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="15dp"

        android:layout_marginStart="55dp"
        android:layout_marginTop="62dp"
        android:layout_toEndOf="@+id/imageEvent"
        android:padding="5dp"
        android:text="Event Location" />

    <TextView
        android:id="@+id/EventDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="108dp"
        android:padding="5dp"
        android:text="Event Date and time" />

</RelativeLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>